<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textviewLogo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="Log in / Sign in"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textviewEmailAddress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewLogo2"
            android:text="email"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/login_signin_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewEmailAddress2"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:textStyle="bold">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textviewPassword2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_signin_email"
            android:text="password"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/login_signin_pwd"
            android:layout_width="379dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textviewPassword2"
            android:layout_marginBottom="10dp"
            android:ems="10" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_signin_pwd"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:text="Login" />

        <Button
            android:id="@+id/button_signin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_signin_pwd"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="171dp"
            android:layout_marginRight="171dp"
            android:layout_marginBottom="20dp"
            android:text="Sing in" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>