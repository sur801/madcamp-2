<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textv2_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="회원가입"
            android:fontFamily="@font/dxregular"
            android:typeface="serif"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/textv1_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textv2_write"
            android:text="이름"
            android:fontFamily="@font/dxregular"
            android:typeface="serif"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/signName_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textv1_write"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:textStyle="bold">

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textviewPhone_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signName_write"
            android:text="전화번호"
            android:fontFamily="@font/dxregular"
            android:typeface="serif"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/signPhone_write"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewPhone_write"
            android:layout_marginBottom="10dp"
            android:ems="10" />

        <Button
            android:id="@+id/button5"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signName_write"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/signPhone_write"
            android:layout_toRightOf="@+id/signPhone_write"
            android:background="@color/colorAccent"
            android:fontFamily="@font/dxregular"
            android:text="인증문자 받기"
            android:typeface="serif" />

        <TextView
            android:id="@+id/textviewEmail_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signPhone_write"
            android:text="이메일"
            android:fontFamily="@font/dxregular"
            android:typeface="serif"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/signEmail_write"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewEmail_write"
            android:layout_marginBottom="10dp"
            android:ems="10" />

        <TextView
            android:id="@+id/textviewEmail_write2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signEmail_write"
            android:text="비밀번호"
            android:fontFamily="@font/dxregular"
            android:typeface="serif"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/signPwd_write"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewEmail_write2"
            android:layout_marginBottom="10dp"
            android:ems="10" />

        <Button
            android:id="@+id/sign_submit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signPwd_write"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/dxregular"
            android:text="작성 완료"
            android:typeface="serif" />

        <EditText
            android:id="@+id/random_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signPwd_write"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/sign_submit"
            android:layout_toRightOf="@+id/sign_submit"
            android:ems="10"
            android:inputType="textPersonName"
            android:fontFamily="@font/dxregular"
            android:typeface="serif"
            android:text="인증번호 4자리" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>